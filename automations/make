#!/usr/local/bin/php
<?php
/*==============================================================================
 *  Title      : Make develope build of css and javascript files (move it to the public_html dir).
 *               It is a wrap for `gulp`.
 *  Author     : Digger (c) SAD-Systems <http://sad-systems.ru>
 *  Created on : 21.10.2015
 *==============================================================================
 * Console script
 * to run from command line
 * -----------------------------------------------------------------------------
 */

$a = $argv[1];

$o = [
    '',
    'css',
    'js',
];

if (!$a) {
    $a = $o[0];
}

chdir(dirname(__DIR__));

if ($a==$o[0]) { 
//--- Build all ------------------------------------------------------
    echo "\n";
    echo "Build all:\n"
       . "----------------------------------\n";
    system("gulp build-dev");    
    
}

if ($a==$o[1]) { 
//--- Build css --------------------------------------------------
    echo "\n";
    echo "Build css only:\n"
       . "----------------------------------\n";
    system("gulp build-css-dev");    
    
}

if ($a==$o[2]) { 
//--- Build javascripts --------------------------------------------
    echo "\n";
    echo "Build javascripts only:\n"
       . "----------------------------------\n";
    system("gulp build-js-dev");    
    
}

echo "done\n";